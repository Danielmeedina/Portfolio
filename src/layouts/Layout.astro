<style is:global>
  /*
    320px — 480px: Mobile devices
    481px — 770px: iPads, Tablets
    771px — 1024px: Small screens, laptops
    1025px — 1200px: Desktops, large screens 
    @media (width <= 320px)  
  */

  :root {
    --container: clamp(300px, 100%, 1300px);
    --primary-color: 92 225 230;
    --bg-color: 15 15 15;
    --bg-color-2: 0 0 0;
    --bg-color-3: 13, 30, 31;
    --text-color: 255 255 255;
    --text--2: clamp(0.6944rem, 0.5978rem + 0.483vw, 0.96rem);
    --text--1: clamp(0.8331rem, 0.6997rem + 0.667vw, 1.2rem);
    --text-0: clamp(1rem, 0.8182rem + 0.9091vw, 1.5rem);
    --text-1: clamp(1.2rem, 0.9545rem + 1.2273vw, 1.875rem);
    --text-2: clamp(1.44rem, 1.1114rem + 1.6432vw, 2.3438rem);
    --text-3: clamp(1.7281rem, 1.2911rem + 2.1852vw, 2.93rem);
    --text-4: clamp(2.0738rem, 1.4963rem + 2.8875vw, 3.6619rem);
    --text-5: clamp(2.4881rem, 1.7284rem + 3.7989vw, 4.5775rem);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    background-color: rgb(var(--bg-color));
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    animation-name: progress;
    animation-timeline: scroll();
    overflow-x: hidden;
  }

  @keyframes progress {
    0% {
      background-color: rgb(var(--bg-color-3));
    }
    50% {
      background-color: rgb(var(--bg-color));
    }
    80% {
      background-color: rgb(var(--bg-color-2));
    }
    100% {
      background-color: rgb(var(--bg-color-3));
    }
  }

  .animated {
    animation-timeline: view();
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-fill-mode: both;
  }
</style>
