---
import Logo from "../imgs/LogoWhite.png";
---

<header class="header blur">
  <nav>
    <img
      src={Logo.src}
      width="240"
      height="60"
      class="logo"
      alt="Logo Daniel Medina"
    />
    <div class="links-container">
      <ul class="links">
        <li>
          <a href="#services">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="40"
              height="40"
              viewBox="0 0 24 24"
              ><path
                fill="#ffffff"
                d="M7 17h7v-2H7v2Zm0-4h10v-2H7v2Zm0-4h10V7H7v2ZM5 21q-.825 0-1.413-.588T3 19V5q0-.825.588-1.413T5 3h14q.825 0 1.413.588T21 5v14q0 .825-.588 1.413T19 21H5Zm0-2h14V5H5v14ZM5 5v14V5Z"
              ></path></svg
            >
             Servicios
          </a>
        </li>
        <li>
          <a href="#projects">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="40"
              height="40"
              viewBox="0 0 24 24"
              ><path
                fill="#ffffff"
                d="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"
              ></path></svg
            >
             Proyectos
          </a>
        </li>
        <li class="contact">
          <a href="#contact">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="40"
              height="40"
              viewBox="0 0 24 24"
              ><path
                fill="#ffffff"
                d="M12 19a6.995 6.995 0 0 1 10-6.32V6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h8.08c-.05-.33-.08-.66-.08-1zM4 6l8 5l8-5v2l-8 5l-8-5V6zm13.34 16l-3.54-3.54l1.41-1.41l2.12 2.12l4.24-4.24L23 16.34L17.34 22z"
              ></path></svg
            >
             Contactame
          </a>
        </li>
      </ul>
    </div>
    <button class="hamburger">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-menu-2"
        width="28"
        height="28"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="#ffffff"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M4 6l16 0"></path>
        <path d="M4 12l16 0"></path>
        <path d="M4 18l16 0"></path>
      </svg>
    </button>
  </nav>
</header>

<style>
  .header {
    width: 100%;
    height: 10vh;
    color: rgb(var(--text-color));
  }

  nav {
    max-width: var(--container);
    height: 10vh;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    padding: 0px 5px;
  }

  .hamburger {
    display: none;
    cursor: pointer;
  }
  .logo {
    width: 240px;
    height: 60px;
    object-fit: cover;
    animation: logo 1s ease both;
    opacity: 0;
    transform: scale(0);
  }
  @keyframes logo {
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  .btn-links,
  .container-links-mobile {
    display: none;
  }

  .links {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .links li {
    list-style: none;
  }

  .links li svg {
    display: none;
  }

  .contact {
    color: rgb(var(--bg-color-2));
    padding: 5px;
    border-radius: 5px 15px 5px 15px;
    background-color: rgb(var(--primary-color));
    transition:
      background-color 0.25s linear,
      border-radius 0.5s linear;
  }
  .contact:hover {
    color: rgb(var(--text-color));
    background-color: transparent;
    border: 1px solid rgb(var(--primary-color));
    border-radius: 15px 5px 15px 5px;
  }

  nav ul a {
    font-size: 20px;
    color: inherit;
    text-decoration: none;
    padding: 10px;
    transition: color 0.25s linear;
  }

  nav ul a:hover {
    color: rgb(var(--primary-color));
  }

  @media (width < 771px) {
    .hamburger {
      border: none;
      background-color: transparent;
      z-index: 100;
      display: block;
      color: rgb(var(--primary-color));
    }
    .links-container {
      z-index: 9;
      position: fixed;
      inset: 0 0 0 0;
      width: 100%;
      min-height: 100vh;
      backdrop-filter: blur(10px);
      background-color: transparent;
      transform: translateX(-130%);
      transition: transform 0.5s ease-in-out;
    }
    .links-container.active {
      transform: translateX(0);
    }

    .links {
      width: clamp(220px, 50%, 300px);
      height: 100vh;
      background-color: rgb(var(--bg-color));
      margin-left: auto;
      margin-top: 0;
      padding: 60px 0 0 0;
      display: flex;
      justify-content: flex-start;
      align-items: flex-start;
      flex-flow: column nowrap;
      gap: 35px;
    }
    .links.active {
      transform: translateX(0);
    }
    .links li {
      display: block;
      width: 100%;
      padding: 0px;
      font-size: 20px;
    }

    .contact {
      all: unset;
    }
    .contac:hover {
      border: 1px solid transparent;
    }

    nav ul a {
      width: 100%;
      padding: 5px;
      display: flex;
      flex-flow: row nowrap;
      justify-content: flex-start;
      align-items: center;
      gap: 10px;
    }

    nav ul a:hover {
      color: rgb(var(--letter-color));
      border-bottom: 2px solid transparent;
    }

    .links li svg {
      display: block;
    }
  }
</style>

<script>
  const btn = document.querySelector(".hamburger");
  const linksContainer = document.querySelector(".links-container");
  const links = document.querySelector(".links");

  const ChangeNavbar = () => {
    const width = window.innerWidth;
    console.log(width);

    if (width < 771) {
      // mostrando el navabar gracias a la clase active
      linksContainer.classList.toggle("active");
      links.classList.toggle("active");

      // validamos si el navbar esta abierto para cambiar el icono y suspender el scroll
      if (linksContainer.classList.contains("active")) {
        document.body.style.overflowY = "hidden";
        btn.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-x" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="#e70404" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M18 6l-12 12"></path>
          <path d="M6 6l12 12"></path>
        </svg>
        `;
      } else {
        document.body.style.overflowY = "auto";
        btn.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-menu-2" width="28" height="28" viewBox="0 0 24 24" stroke-width="2" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M4 6l16 0"></path>
          <path d="M4 12l16 0"></path>
          <path d="M4 18l16 0"></path>
        </svg>
        `;
      }
    }
  };
  linksContainer.addEventListener("click", () => {
    ChangeNavbar();
  });

  btn.addEventListener("click", () => {
    ChangeNavbar();
  });
</script>
