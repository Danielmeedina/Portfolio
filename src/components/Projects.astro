import Typescript from "../icons/Typescript.astro";
import Tailwind from "../icons/Tailwind.astro";
import NextjsIcon from "../icons/NextjsIcon.astro";
import Arrow from "../icons/Arrow.astro";
---

<section id="projects">
  <div class="title animated">
